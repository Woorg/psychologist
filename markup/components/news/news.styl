.articles
	margin-left 30px
	width 514px
	float left
	&:first-child
		margin-left 0
	&__list
		margin 0
		padding 0
		list-style none
	&__title
		margin-top 0
		margin-bottom 42px
		font-size 48px
		font-weight normal
		color #939393
	// &__list
	&__item
		position relative
		border-bottom 1px solid #bbbbbb
		padding-left 160px
		padding-top 15px
		padding-bottom 12px
		cf()
		&:first-child
			padding-top 0
		&:last-child
			border-bottom none

	&__i-image
		position absolute
		top 22px
		left 0
		margin-right 12px
		width 150px
		height 100px
		float left
		img
			max-width 100%
	&__item
		&:first-child
			.articles__i-image
				top 5px
	&__i-title
		margin-top 0
		margin-bottom 0
		font-family $fBold
		font-size 18px
		font-weight normal
		color #33c5ff
	&__i-date
		font-family $fBold
		font-size 18px
		font-weight normal
		color #000
	&__i-text
		margin 0
		font-size 14px
	&__link-w
		text-align right
	&__link
		font-family $fItalic
		font-size 14px
		color #33c5ff
		text-decoration none
		&:hover
			text-decoration underline
		&:after
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			content ""


.articles_news
	float right
	width 380px
	.articles__item
		border-bottom none
		padding-left 0
	.articles__i-title
		display block
		text-decoration none
		&:hover
			text-decoration underline
		&:after
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			content ""

.articles_questions
	width 600px
	.articles__item
		border-bottom none
		margin-bottom 18px
		padding-left 0
	.articles__i-title
		margin-bottom 10px
		display block
		// line-height 1


