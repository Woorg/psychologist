.header
	min-height 290px
	overflow hidden
	background url('__static__/general/header-bg.jpg') 50% 0 no-repeat
	background-size 100% 100%
	&__top
		position relative
		padding-top 58px
		padding-bottom 20px
		@extends .in
		cf()
	&__photo
		position relative
		left -18px
		margin auto
		width 162px
		height 162px
		display block
		cursor pointer
		text-decoration none
		opacity 1
		transition opacity .3s ease
		&:hover
			opacity .95
		img
			max-width 100%
			border-radius 50%
	&__left
		position absolute
		top 74px
		left 0
		width 366px
	&__title
		margin-top 0
		margin-left -1000px
		margin-bottom 0px
		padding 6px 20px 9px 0
		background-color rgba(0,0,2,.2)
		font-size 48px
		font-weight normal
		text-align right
		line-height 1
		color #FFF
		border-radius 0 15px 15px 0
		cf()
	&__title-w
		float right
	&__note
		padding-top 7px
		padding-right 3px
		display block
		font-size 24px
	&__contacts
		font-family $fBold
		font-size 24px
		font-weight normal
		line-height 1
		color #FFF
		text-align right
	&__email
		margin-bottom 5px
		display block
		text-decoration none
		color inherit
	&__phone
		display block
		text-decoration none
		color inherit
	&__social
		position absolute
		right 10px
		bottom 2px
	&__nav
		background rgba(0,0,0,.7)

.social
	&__list
		margin 0
		padding 0
		font-size 0
		text-align right
	&__item
		margin-left 8px
		display inline-block
		vertical-align top
		&:first-child
			margin-left 0
		&_skype
			.social__link
				bg($skype-icon)
		&_vk
			.social__link
				bg($vk-icon)
		&_fb
			.social__link
				bg($fb-icon)
	&__link
		display block
		opacity 1
		transition opacity .3s ease
		&:hover
			opacity 0.8
	&__title
		margin-bottom 2px
		font-family $fLight
		font-size 48px
		color #cccbc1


.nav
	&__list
		@extends .in
		padding-top 14px
		padding-bottom 6px
		font-size 0
		text-align justify
		text-justify newspaper
		&:after
			content ""
			width 100%
			height 0
			display inline-block
			vertical-align top
	&__item
		display inline-block
		vertical-align top
		color #FFF
		line-height 23px
	&__link
		border-left 3px solid #fff
		padding-left 24px
		padding-right 16px
		font-family $fBold
		font-size 18px
		font-weight normal
		color inherit
		text-decoration none
		&:hover
			text-decoration underline
	&__item
		&:first-child
			.nav__link
				border-left none
				padding-left 0
		&:last-child
			.nav__link
				padding-right 0


